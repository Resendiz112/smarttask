<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Botones "Activas" y "Completadas" -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/btnActivas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activas"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#6200EE"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnCompletadas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Completadas"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="#000000"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>

    <!-- RecyclerView principal -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTareas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutBotones"
        android:layout_above="@id/textEmptyMessage"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ffeeee" />

    <!-- Texto que muestra mensaje si no hay tareas -->
    <TextView
        android:id="@+id/textEmptyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay tareas"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:visibility="gone" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Agregar tarea"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>
