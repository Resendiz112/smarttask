<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView para tareas activas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTareasActivas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textToggleCompletadas"
        android:paddingTop="16dp"
        android:paddingBottom="70dp" />

    <!-- Texto que funciona como toggle (acordeÃ³n) para tareas completadas -->
    <TextView
        android:id="@+id/textToggleCompletadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#EEE"
        android:padding="12dp"
        android:text="Mostrar tareas completadas"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- RecyclerView para tareas completadas (oculto inicialmente) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTareasCompletadas"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@id/textToggleCompletadas"
        android:visibility="gone"
        android:paddingBottom="70dp" />

    <!-- Floating button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Agregar tarea"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>
