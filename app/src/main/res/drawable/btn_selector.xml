<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado (cuando el usuario toca el botón) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFBB86FC"/> <!-- Morado claro -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Estado seleccionado (cuando el botón está activo) -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FF6200EE"/> <!-- Morado oscuro -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="#FFBB86FC"/> <!-- Morado claro -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
